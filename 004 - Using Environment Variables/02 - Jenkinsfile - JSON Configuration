pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	environment {
		BUILD_CONFIGS = '''[{
				name: "COMPILE",
				command: "mvn compile"
			}, {
				name: "TEST",
				command: "mvn test"
			}, {
				name: "INSTALL",
				command: "mvn install"
			}, {
				name: "DEPLOY",
				command: "mvn deploy"
			}
		]'''
	}
    stages {
        stage('build') {
            steps {
                script {
                	def buildConfigs = readJSON text: "$BUILD_CONFIGS"
                	buildConfigs.each{ buildConfig ->
                		sh "echo '$buildConfig.name' && $buildConfig.command"
					}
                }
            }
        }
    }
}