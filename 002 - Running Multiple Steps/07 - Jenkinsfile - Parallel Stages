pipeline {
    agent none
    stages {
		parallel {
			stage("Maven") {
				agent { 
					docker { 
						image 'maven:3.3.3' 
					} 
				}
				steps {
					sh 'mvn --version'
				}	
			}
			stage("NPM") {
				agent { 
					docker {
						image 'node:6.3' 
					} 
				}
				steps {
					sh 'npm --version'
				}
			}
		}
    }
}